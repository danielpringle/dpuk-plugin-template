{
    "name": "dpuk/dpuk-plugin-template",
    "description": "Plugin template",
    "autoload": {
        "psr-4": {
            "PluginTests\\": "tests/"
        }
    },
    "authors": [
        {
            "name": "Daniel Pringle",
            "email": "dan@danielpringle.co.uk"
        }
    ],
    "require-dev": {
        "phpstan/phpstan": "^1.10",
        "phpunit/phpunit": "^9.6",
        "squizlabs/php_codesniffer": "3.*"
    },
    "scripts": {
        "static-tests": "vendor/bin/phpstan analyse -l 6 includes tests",
        "php-lint": "./vendor/bin/phpcs --colors --standard=PSR12",
        "php-fix": "./vendor/bin/phpcbf --colors --standard=PSR12"
      }
}
